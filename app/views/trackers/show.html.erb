<div class="page-header">
  <h1>
    <%= @tracker.new_record? ? "New Tracker" : "Tracker ##{@tracker.id}"%>
    <small>
    </small>
  </h1>
</div>
<%= form_for @tracker do |tracker| %>
  <% if @tracker.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@tracker.errors.count, "error") %> prohibited this campaign from being saved:</h2>

      <ul>
      <% @tracker.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <fieldset>
  <%= tracker.label :domain %>
  <%= tracker.text_field :domain %>
